<!--index.wxml-->
<view class="tem-search">
  <import src="../search/search.wxml"/>
  <template is="search" data="{{...item}}"/>
</view>
<scroll-view scroll-y="ture">
  <block wx:for="{{articles}}" wx:for-item="article">
    <view class="article" data-article="{{article}}" bindtap="toDetail" >
        <view class="title">{{article.title}}</view>
        <image mode="{{mode}}" src="{{article.cover}}"></image>
        <view class="title-type">
          <view wx:for="{{article.tags}}" wx:for-item="tag" class="play-type">{{tag}}</view>
          <view class="like-card" catchtap="liking">
            <image wx:if="{{article.likebtn}}" src="{{}}"></image>
            <image else src="{{}}" ></image>
            <text>喜欢</text>
          </view>
        </view>
    </view>
  </block>
</scroll-view>

  
